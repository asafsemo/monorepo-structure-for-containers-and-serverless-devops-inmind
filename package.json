{
    "name": "template-monorepo-project",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Asaf Semo",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/**",
        "packages/**"
    ],
    "scripts": {
        "build": "turbo build --no-daemon",
        "dev": "nodemon",
        "serverless": "NODEMON_SCRIPT=exec-serverless nodemon",
        "clean": "node clean.js",
        "lint": "turbo lint --no-daemon",
        "g:tsc": "cd $INIT_CWD && tsc-absolute",
        "root-ui": "turbo exec-ui --no-daemon"
    },
    "devDependencies": {
        "c8": "^10.1.3",
        "eslint": "^9.31.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "tsc-absolute": "^1.0.1",
        "turbo": "^2.5.4",
        "typescript": "^5.8.3"
    },
    "dependenciesMeta": {
        "nodemon": {
            "unplugged": false
        }
    },
    "packageManager": "yarn@4.1.0"
}
